<script>
const app = document.getElementById('app');

const state = {
  companyName: '',
  numLocations: 1,
  annualVolume: 5000000,
  lanes: 3,
  hourlyWage: 23,
  currentPOS: 'none',
  desiredTags: 5000,
  loyalty: true,
  inventory: true,
  ordering: true,
  smartPricing: true,
  invoiceAudit: true,
  eshelfTags: true,
  loyaltyImpact: 5,
  inventoryImpact: 1.25,
  smartPricingImpact: 1.25,
  orderingHours: 6,
  invoiceHours: 8,
  tagHours: 2,
  upfrontCosts: 6824,
  monthlyFee: 1197,
  eShelfPerMonth: 250,
  financingTerm: 0,
};

function fmt(n) {
  return new Intl.NumberFormat('en-US', { maximumFractionDigits: 0 }).format(n);
}

function fmtDollar(n) {
  if (Math.abs(n) >= 1000000) return '$' + (n / 1000000).toFixed(1) + 'M';
  if (Math.abs(n) >= 1000) return '$' + fmt(n);
  return '$' + n.toFixed(0);
}

function calculate() {
  const s = state;
  const totalVolume = s.annualVolume * s.numLocations;
  const loyaltyValue = s.loyalty ? totalVolume * (s.loyaltyImpact / 100) : 0;
  const inventoryValue = s.inventory ? totalVolume * (s.inventoryImpact / 100) : 0;
  const orderingValue = s.ordering ? (s.orderingHours * s.hourlyWage * 52 * s.numLocations) * 0.5 : 0;
  const smartPricingMargin = s.smartPricing ? totalVolume * (s.smartPricingImpact / 100) : 0;
  const invoiceLaborValue = s.invoiceAudit ? (s.invoiceHours * s.hourlyWage * 52 * s.numLocations) * 0.75 : 0;
  const eShelfValue = s.eshelfTags ? (s.tagHours * s.hourlyWage * 52 * s.numLocations) * 0.5 : 0;
  const totalValueAdded = loyaltyValue + inventoryValue + orderingValue + smartPricingMargin + invoiceLaborValue + eShelfValue;
  const profitGrowthPct = totalVolume > 0 ? (totalValueAdded / totalVolume) * 100 : 0;
  const annualSoftwareCost = s.monthlyFee * 12 * s.numLocations;
  const annualEShelfCost = s.eshelfTags ? s.eShelfPerMonth * 12 * s.numLocations : 0;
  const totalAnnualSoftware = annualSoftwareCost + annualEShelfCost;
  const totalUpfront = s.upfrontCosts * s.numLocations;
  const financingTerm = s.financingTerm;
  const monthlyFinancing = financingTerm > 0 ? totalUpfront / financingTerm : 0;
  const annualFinancing = monthlyFinancing * 12;
  const financingYears = financingTerm > 0 ? financingTerm / 12 : 0;
  let year1Cost, year2Cost;
  if (financingTerm === 0) {
    year1Cost = totalAnnualSoftware + totalUpfront;
    year2Cost = totalAnnualSoftware;
  } else {
    const yr1Fin = Math.min(annualFinancing, totalUpfront);
    year1Cost = totalAnnualSoftware + yr1Fin;
    if (financingYears > 1) {
      year2Cost = totalAnnualSoftware + Math.min(annualFinancing, totalUpfront - yr1Fin);
    } else {
      year2Cost = totalAnnualSoftware;
    }
  }
  return {
    loyaltyValue, inventoryValue, orderingValue, smartPricingMargin,
    invoiceLaborValue, eShelfValue, totalValueAdded, profitGrowthPct,
    totalAnnualSoftware, totalUpfront, year1Cost, year2Cost,
    netReturnYear1: totalValueAdded - year1Cost,
    netReturnYear2: totalValueAdded - year2Cost,
    paybackMonths: totalValueAdded > 0 ? (year1Cost / totalValueAdded) * 12 : 999,
    dailyLost: totalValueAdded / 365,
    monthlyLost: totalValueAdded / 12,
    totalVolume, monthlyFinancing, annualFinancing
  };
}

// Only update text outputs â€” never touch input elements
function updateOutputs() {
  const r = calculate();
  const name = state.companyName || 'Your Store';
  const t = (id, val) => { const el = document.getElementById(id); if (el) el.textContent = val; };
  const h = (id, val) => { const el = document.getElementById(id); if (el) el.innerHTML = val; };

  h('clock-daily', '<span class="dollar">$</span>' + fmt(Math.round(r.dailyLost)));
  h('clock-name', 'in unrealized profit <strong>every single day</strong> for ' + name);
  t('clock-monthly', fmtDollar(r.monthlyLost));
  t('clock-yearly', fmtDollar(r.totalValueAdded));
  t('annual-fee-display', '= ' + fmtDollar(state.monthlyFee * 12 * state.numLocations) + '/yr' + (state.numLocations > 1 ? ' (all locations)' : ''));

  const fi = document.getElementById('financing-info');
  if (fi) {
    if (state.financingTerm > 0) {
      const totalMonthlyPayment = r.monthlyFinancing + (state.monthlyFee * state.numLocations) + (state.eshelfTags ? state.eShelfPerMonth * state.numLocations : 0);
      const totalContractCost = totalMonthlyPayment * state.financingTerm;
      fi.innerHTML = fmtDollar(r.totalUpfront) + ' financed over ' + state.financingTerm + ' months = <strong style="color:var(--vori-green)">' + fmtDollar(r.monthlyFinancing) + '/mo</strong>'
        + '<br>Total monthly payment (financing + software): <strong style="color:var(--vori-green)">' + fmtDollar(totalMonthlyPayment) + '/mo</strong>'
        + '<br>Total ' + state.financingTerm + '-month contract cost: <strong style="color:var(--vori-green)">' + fmtDollar(totalContractCost) + '</strong>';
      fi.style.display = 'block';
    } else { fi.style.display = 'none'; }
  }

  t('loyalty-sv', state.loyaltyImpact + '% of revenue \u2192 ' + fmtDollar(r.loyaltyValue) + '/yr');
  t('inventory-sv', state.inventoryImpact + '% of revenue \u2192 ' + fmtDollar(r.inventoryValue) + '/yr');
  t('ordering-sv', state.orderingHours + ' hrs/wk saved \u2192 ' + fmtDollar(r.orderingValue) + '/yr');
  t('smartpricing-sv', state.smartPricingImpact + '% of revenue \u2192 ' + fmtDollar(r.smartPricingMargin) + '/yr');
  t('invoice-sv', state.invoiceHours + ' hrs/wk saved \u2192 ' + fmtDollar(r.invoiceLaborValue) + '/yr');
  t('eshelf-sv', state.tagHours + ' hrs/wk saved \u2192 ' + fmtDollar(r.eShelfValue) + '/yr');

  t('res-total-value', fmtDollar(r.totalValueAdded));
  t('res-profit-growth', r.profitGrowthPct.toFixed(1) + '%');
  t('res-year1', fmtDollar(r.netReturnYear1));
  t('res-year2', fmtDollar(r.netReturnYear2));
  t('res-payback', r.paybackMonths < 1 ? '<1' : r.paybackMonths.toFixed(1));

  t('tbl-loy-b', fmtDollar(r.totalVolume)); t('tbl-loy-v', fmtDollar(r.loyaltyValue));
  t('tbl-inv-b', fmtDollar(r.totalVolume)); t('tbl-inv-v', fmtDollar(r.inventoryValue));
  t('tbl-ord-b', fmtDollar(state.orderingHours * state.hourlyWage * 52 * state.numLocations)); t('tbl-ord-v', fmtDollar(r.orderingValue));
  t('tbl-pri-b', fmtDollar(r.totalVolume)); t('tbl-pri-v', fmtDollar(r.smartPricingMargin));
  t('tbl-aud-b', fmtDollar(state.invoiceHours * state.hourlyWage * 52 * state.numLocations)); t('tbl-aud-v', fmtDollar(r.invoiceLaborValue));
  t('tbl-esh-b', fmtDollar(state.tagHours * state.hourlyWage * 52 * state.numLocations)); t('tbl-esh-v', fmtDollar(r.eShelfValue));
  t('tbl-total', fmtDollar(r.totalValueAdded));
}

