    <div class="footer"><p>Built with \uD83D\uDC9C by <a href="https://www.vori.com" target="_blank">Vori</a> \u00B7 The grocery operating system</p></div>
  `;
  attachListeners();
}

function attachListeners() {
  app.querySelectorAll('[data-key]').forEach(function(el) {
    var key = el.dataset.key;
    var type = el.dataset.type || 'text';
    el.addEventListener('input', function() {
      if (type === 'dollar') { state[key] = parseInt(el.value.replace(/[^0-9]/g, '')) || 0; }
      else if (type === 'int') { state[key] = parseInt(el.value) || 0; }
      else if (type === 'float') { state[key] = parseFloat(el.value) || 0; }
      else { state[key] = el.value; }
      updateOutputs();
    });
    if (type === 'dollar') {
      el.addEventListener('blur', function() { el.value = fmt(state[key]); });
    }
  });
  app.querySelectorAll('[data-module]').forEach(function(btn) {
    btn.addEventListener('click', function() {
      state[btn.dataset.module] = !state[btn.dataset.module];
      fullRender();
    });
  });
  app.querySelectorAll('[data-financing]').forEach(function(btn) {
    btn.addEventListener('click', function() {
      state.financingTerm = parseInt(btn.dataset.financing);
      app.querySelectorAll('[data-financing]').forEach(function(b) {
        b.classList.toggle('active', parseInt(b.dataset.financing) === state.financingTerm);
      });
      updateOutputs();
    });
  });
}

fullRender();
</script>
</body>
</html>
